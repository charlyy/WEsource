<h1 >Create a WEsource</h1>

<%= form_for Resource.new, :class=> "form-group" do |f| %>
    <%= f.text_field :title, :placeholder => "Title", :class => "form-control"  %>
    <%= f.text_field :language, :placeholder => "Language", :class => "form-control" %>
    <%= f.text_field :link, :placeholder => "Link", :class => "form-control" %>
    <%= f.text_field :note, :placeholder => "Note (optional)", :class => "form-control" %> <br/>
    <%= f.submit "Share", class: 'button success' %>
<% end %>
